@pkgdep tmux
@cwd /opt/local
@exec mkdir minecraft
@cwd /opt/local/minecraft
@exec mkdir bin
@exec mkdir smf
@cwd /opt/local/minecraft/bin
mc-service
mc-console
mc-update
@exec chmod 755 *
@cwd /opt/local/minecraft/smf
minecraft.xml
@exec groupadd minecrft
@exec useradd -g minecrft minecrft
@exec chown -R minecrft:minecrft /opt/local/minecraft
@exec svccfg import /opt/local/smf/minecraft.xml
@exec ln -s /opt/local/minecraft/bin/mc-console /opt/local/bin
@exec ln -s /opt/local/minecraft/bin/mc-update /opt/local/bin
